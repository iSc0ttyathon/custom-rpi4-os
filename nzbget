[Unit]
Description=NZBGet Daemon
Documentation=http://nzbget.net/Documentation
After=network.target

[Service]
User=root
Group=root
Type=forking
ExecStart=/mnt/3TB/Downloads/nzbget/nzbget -D
ExecStop=/mnt/3TB/Downloads/nzbget/nzbget -Q
ExecReload=/mnt/3TB/Downloads/nzbget/nzbget -O
KillMode=process
Restart=on-failure

[Install]
WantedBy=multi-user.target
